<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- AppTheme AppBarOverlay -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Customize additional overlay attributes here -->
    </style>

    <!-- CustomButtonStyle -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <!-- Add other button customizations as needed -->
    </style>

    <!-- Widget.Material3.Button.TextButton.Medium -->
    <style name="Widget.Material3.Button.TextButton.Medium" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <!-- Add other properties as needed -->
    </style>

    <!-- MyButtonStyle -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
        <item name="buttonStyle">@style/Widget.AivaCRM.Button</item>

        <!-- Customize other attributes if needed -->
    </style>




    <!-- Popup Overlay -->
    <style name="ThemeOverlay.AivaCRM.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Custom Button Style -->
    <style name="Widget.AivaCRM.Button" parent="Widget.MaterialComponents.Button">
        <!-- Primary Buttons -->
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>

        <!-- Customize other button attributes as needed -->
    </style>

    <!-- Custom TextView Style -->
    <style name="Widget.AivaCRM.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/darkGrey</item>
        <!-- Customize other TextView attributes as needed -->
    </style>

    <!-- Custom EditText Style -->
    <style name="Widget.AivaCRM.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/lightGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/mediumGrey</item>
        <item name="colorControlHighlight">@color/colorPrimaryVariant</item>
        <item name="android:textColorHint">@color/mediumGrey</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Custom CheckBox Style -->
    <style name="Widget.AivaCRM.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/mediumGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryVariant</item>
    </style>

    <!-- Custom MaterialButton Styles -->
    <style name="Widget.MaterialComponents.Button.TextButton.Medium" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Custom TextAppearance Styles -->
    <style name="TextAppearance.AivaCRM.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.AivaCRM.Subtitle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/mediumGrey</item>
    </style>

    <style name="TextAppearance.AivaCRM.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <!-- Custom Dialog Theme -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <!-- Custom Button Styles for Different States -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="Button.Error" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorError</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Success" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSuccess</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom Ripple Effect Style -->
    <style name="RippleStyleWhite">
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>



    <!-- Custom Toolbar Style -->
    <style name="Toolbar.AivaCRM" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:titleTextColor">@color/light_blue_50</item>
        <item name="android:subtitleTextColor">@color/lightGrey</item>
        <item name="popupTheme">@style/ThemeOverlay.AivaCRM.PopupOverlay</item>
    </style>

    <!-- Custom Bottom Sheet Tab Layout -->
    <style name="CustomTabBottomSheet" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/mediumGrey</item>
    </style>

    <style name="TaskInfo.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="android:background">@color/colorBackground</item>
    </style>
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>

    </style>

    <style name="DialogAnimation" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/exit_to_bottom</item>
    </style>

</resources>
