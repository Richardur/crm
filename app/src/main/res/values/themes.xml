<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AivaCRM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_A200</item>
        <item name="colorSecondaryVariant">@color/red_A100</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/Widget.AivaCRM.Button</item>

    </style>

    <style name="Widget.AivaCRM.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red_A200</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
    <style name="Theme.AivaCRM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="buttonStyle">@style/Widget.AivaCRM.Button</item>
    </style>

    <style name="Theme.AivaCRM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AivaCRM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>